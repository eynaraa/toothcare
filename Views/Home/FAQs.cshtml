@{
    ViewData["Title"] = "Frequently Asked Questions";
}

<h2 class="text-primary text-center">
    <i class="fas fa-question-circle"></i> Frequently Asked Questions
</h2>

<div class="faq-container p-4">
    <div class="accordion" id="faqAccordion">

        <!-- FAQ 1 -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <i class="fas fa-tooth me-2"></i> What services do you offer?
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    We provide general dental checkups, orthodontics, teeth whitening, root canals, and cosmetic dentistry services.
                </div>
            </div>
        </div>

        <!-- FAQ 2 -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <i class="fas fa-calendar-check me-2"></i> How do I book an appointment?
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    You can book an appointment online through our system or call our receptionist for assistance.
                </div>
            </div>
        </div>

        <!-- FAQ 3 -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <i class="fas fa-clock me-2"></i> What are your clinic hours?
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    We are open Monday to Friday from 9:00 AM to 6:00 PM and Saturday from 9:00 AM to 2:00 PM.
                </div>
            </div>
        </div>

        <!-- FAQ 4 -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingFour">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                    <i class="fas fa-money-bill-wave me-2"></i> What payment methods do you accept?
                </button>
            </h2>
            <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#faqAccordion">
                <div class="accordion-body">
                    We accept cash, credit/debit cards, and insurance payments from major providers.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .faq-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 600px;
        margin: auto;
    }

    .accordion-button {
        background: #007bff;
        color: white;
        font-weight: bold;
    }

        .accordion-button:not(.collapsed) {
            background: #0056b3;
            color: white;
        }

    .accordion-item {
        border: 2px solid #007bff;
    }

    body {
        background: url('/images/dental3-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome & Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>