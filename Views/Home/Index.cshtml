@{
    ViewData["Title"] = "Toothcare";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/cosmo/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-3 text-primary fw-bold">Welcome to Toothcare</h1>
        <p class="lead text-secondary">Your trusted dental clinic for a brighter smile</p>
    </div>

    <div class="row mt-4 g-0 justify-content-center">
        <div class="col-md-4 text-center">
            <img src="/images/dental-home.JPG" alt="Dental Clinic" class="img-fluid rounded shadow-lg" style="width: 300px">
        </div>
        <div class="col-md-6 d-flex align-items-center" style="background-color: white; border-radius: 15px; padding: 10px 15px; box-shadow: 4px 4px 10px rgba(0, 0, 255, 0.2);">
            <p class="fs-5 text-center">
                At Toothcare, we provide top-notch dental services with advanced technology and a caring team.
                From routine check-ups to cosmetic dentistry, we're here to ensure your smile stays healthy and bright.
            </p>
        </div>
        <div class="d-flex justify-content-end mt-4" style="padding-right: 120px">
            <a href="/Login" class="btn btn-primary btn-lg rounded-pill" style="width: 15%">Login</a>

        </div>


    </div>



</div>

<style>
    body {
        background: url('/images/dental-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>
