@{
    ViewData["Title"] = "Privacy Policy";
}

<h2 class="text-primary text-center"><i class="fas fa-user-shield"></i> Privacy Policy</h2>

<div class="privacy-container p-4">
    <p class="text-center">We value your privacy and are committed to protecting your personal data.</p>

    <div class="mb-4">
        <h4><i class="fas fa-user-secret"></i> Personal Information</h4>
        <p>We collect necessary personal details to provide quality dental care and appointment scheduling.</p>
    </div>

    <div class="mb-4">
        <h4><i class="fas fa-lock"></i> Data Security</h4>
        <p>Your information is securely stored and protected against unauthorized access.</p>
    </div>

    <div class="mb-4">
        <h4><i class="fas fa-share-alt"></i> Data Sharing</h4>
        <p>We do not share your information with third parties except as required by law or for medical referrals.</p>
    </div>

    <div class="mb-4">
        <h4><i class="fas fa-calendar-check"></i> Appointment Information</h4>
        <p>Details regarding your appointments are confidential and used solely for scheduling purposes.</p>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

<style>
    .privacy-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 600px;
        margin: auto;
    }

    h4 {
        color: #007bff;
    }

    body {
        background: url('/images/dental3-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>