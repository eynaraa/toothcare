@model Toothcare_Appointment_System.Models.Doctors

<h2 class="text-primary text-center"><i class="fas fa-user-md"></i> Edit Doctor Details</h2>

<div class="edit-container p-4">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="DoctorID" />

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-user"></i></span>
            <input asp-for="DoctorName" class="form-control" placeholder="Enter Name" />
            <span asp-validation-for="DoctorName" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-phone"></i></span>
            <input asp-for="DoctorPhoneNo" class="form-control" type="tel" placeholder="Enter Phone Number" />
            <span asp-validation-for="DoctorPhoneNo" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            <input asp-for="DoctorEmail" class="form-control" type="email" placeholder="Enter Email" />
            <span asp-validation-for="DoctorEmail" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
            <input asp-for="DoctorLicenseNumber" class="form-control" placeholder="Enter License Number" />
            <span asp-validation-for="DoctorLicenseNumber" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-calendar-check"></i></span>
            <input asp-for="DoctorAvailability" class="form-control" placeholder="Enter Availability" />
            <span asp-validation-for="DoctorAvailability" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
            <textarea asp-for="DoctorAddress" class="form-control" placeholder="Enter Address"></textarea>
            <span asp-validation-for="DoctorAddress" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <span class="input-group-text"><i class="fas fa-lock"></i></span>
            <input asp-for="DoctorPass" class="form-control" type="password" placeholder="Enter Password" />
            <span asp-validation-for="DoctorPass" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success rounded-pill px-4">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-outline-danger rounded-pill px-4">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

<style>
    .edit-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 500px;
        margin: auto;
    }

    .input-group-text {
        background: #007bff;
        color: white;
        border-radius: 20px 0 0 20px;
        border: none;
    }

    .form-control {
        border: 2px solid #007bff;
        transition: 0.3s ease-in-out;
    }

        .form-control:focus {
            box-shadow: 0 0 8px rgba(0, 100, 255, 0.5);
            border-color: #0056b3;
        }

    .btn-success {
        background: #28a745;
        border: none;
    }

        .btn-success:hover {
            background: #218838;
        }

    .btn-outline-danger:hover {
        background: #dc3545;
        color: white;
    }

    body {
        background: url('/images/dental3-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>