@model Toothcare_Appointment_System.Models.Doctors

<h2 class="text-primary text-center"><i class="fas fa-user-md"></i> Doctor Page</h2>

<div class="user-container p-4">
    <dl class="row">
        <dt class="col-sm-3"><i class="fas fa-user"></i> Doctor Name</dt>
        <dd class="col-sm-9">@Model.DoctorName</dd>

        <dt class="col-sm-3"><i class="fas fa-phone"></i> Phone Number</dt>
        <dd class="col-sm-9">@Model.DoctorPhoneNo</dd>

        <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email</dt>
        <dd class="col-sm-9">@Model.DoctorEmail</dd>

        <dt class="col-sm-3"><i class="fas fa-id-badge"></i> License Number</dt>
        <dd class="col-sm-9">@Model.DoctorLicenseNumber</dd>
    </dl>

    <div class="text-center mt-3 d-flex justify-content-center gap-2">
        <a asp-action="Edit" asp-route-id="@Model.DoctorID" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.DoctorID" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete
        </a>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</div>

<style>
    .user-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #a6c9e2;
    }

    dt {
        font-weight: bold;
        color: #007bff;
    }

    dd {
        padding-left: 10px;
    }

    .btn {
        border-radius: 20px;
        padding: 10px 20px;
        transition: all 0.3s;
    }

    .btn-outline-primary:hover {
        background: #007bff;
        color: white;
    }

    body {
        background: url('/images/dental-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- FontAwesome Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
