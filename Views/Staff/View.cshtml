@model Toothcare_Appointment_System.Models.Staff

<h2 class="text-primary text-center">
    <i class="fas fa-user"></i> User Details
</h2>

<div class="user-container p-4">
    <dl class="row">
        <dt class="col-sm-3"><i class="fas fa-user"></i> Staff Name</dt>
        <dd class="col-sm-9">@Model.StaffName</dd>

        <dt class="col-sm-3"><i class="fas fa-phone"></i> Phone Number</dt>
        <dd class="col-sm-9">@Model.StaffPhoneNo</dd>

        <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email</dt>
        <dd class="col-sm-9">@Model.StaffEmail</dd>

        <dt class="col-sm-3"><i class="fas fa-user-tag"></i> Role</dt>
        <dd class="col-sm-9">@Model.StaffRole</dd>
    </dl>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</div>

<style>
    .user-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 500px;
        margin: auto;
    }

    dt {
        font-weight: bold;
        color: #007bff;
    }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
    }

    body {
        background: url('/images/dental4-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
