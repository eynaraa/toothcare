<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Toothcare Appointment System</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Toothcare_Appointment_System.styles.css" asp-append-version="true" />
	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
	<!-- Font Awesome 6 CDN -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">


</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light dental-header">
			<div class="container-fluid">
				<a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
					<i class="fa-solid fa-tooth "></i> Toothcare System
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-lg-flex justify-content-between">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
								<i class="bi bi-house-door"></i> Home
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark fw-semibold" asp-area="" asp-controller="Home" asp-action="Privacy">
								<i class="bi bi-shield-lock"></i> Privacy
							</a>
						</li>
					</ul>

					<div>
						@if (User.Identity.IsAuthenticated)
						{
							<form method="post" action="/logout" class="d-inline">
								<button type="submit" class="btn btn-danger rounded-pill">
									<i class="bi bi-box-arrow-right"></i> Logout
								</button>
							</form>
						}
						else
						{
							<a class="btn btn-primary rounded-pill" asp-area="" asp-controller="Auth" asp-action="Login">
								<i class="bi bi-person-circle"></i> Login
							</a>
						}
					</div>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)

	<style>
		/* Dental-Themed Header */
		.dental-header {
			background: linear-gradient(to right, #cce7ff, #ffffff);
			border-bottom: 3px solid #a6c9e2;
			box-shadow: 0px 4px 10px rgba(0, 0, 255, 0.2);
			padding: 10px 15px;
			border-radius: 0 0 15px 15px;
		}

		/* Navbar Brand */
		.navbar-brand {
			font-size: 1.5rem;
		}

		/* Navbar Links */
		.navbar-nav .nav-link {
			font-size: 1.1rem;
			transition: 0.3s ease-in-out;
		}

			.navbar-nav .nav-link:hover {
				color: #007bff;
				transform: scale(1.05);
			}

		/* Login & Logout Button */
		.btn {
			font-size: 1rem;
			padding: 8px 15px;
		}
	</style>
</body>
</html>
