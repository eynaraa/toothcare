@model Toothcare_Appointment_System.Models.Staff

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/cosmo/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary">
                        <i class="bi bi-person-plus"></i> Register
                    </h2>

                    <form asp-controller="Auth" asp-action="RegisterStaff" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StaffName" class="form-label">Name</label>
                                <input asp-for="StaffName" class="form-control" placeholder="Enter name" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="StaffPhoneNo" class="form-label">Phone</label>
                                <input asp-for="StaffPhoneNo" class="form-control" type="tel" placeholder="Enter phone" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StaffEmail" class="form-label">Email</label>
                                <input asp-for="StaffEmail" class="form-control" type="email" placeholder="Enter email" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="StaffRole" class="form-label">Role</label>
                                <select asp-for="StaffRole" class="form-control">
                                    <option value="Receptionist">Receptionist</option>
                                    <option value="Nurse">Nurse</option>
                                    <option value="Admin">Admin</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" placeholder="Enter password" required />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="StaffPass" class="form-label">Confirm Password</label>
                                <input asp-for="StaffPass" class="form-control" type="password" placeholder="Confirm password" required />
                            </div>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-3">
                            <button type="submit" class="btn btn-primary w-50">Create</button>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-secondary w-50">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url('/images/dental4-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .form-control {
        border-radius: 50px;
        border: 1.5px solid #007bff;
        padding: 10px 15px;
    }

        .form-control::placeholder {
            color: #6c757d;
            opacity: 1;
        }
</style>
