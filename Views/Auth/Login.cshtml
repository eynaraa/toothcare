@{
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/cosmo/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<style>
    .form-control {
        border-radius: 50px;
        border: 1.5px solid #007bff;
        padding: 10px 15px;
    }

        .form-control::placeholder {
            color: #6c757d;
            opacity: 1;
        }

    body {
        background: url('/images/dental-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary">
                        Login<br>
                        <i class="bi bi-person-circle" style="font-size: 80px"></i>
                    </h2>

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">User ID</label>
                            <input type="text" name="id" class="form-control" placeholder="Enter your User ID" value="@(TempData["RegisterUserId"])" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Enter your Password" required />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {
                            <p class="text-danger text-center mt-2">@ViewBag.Error</p>
                        }
                    </form>

                    <hr>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Register" asp-route-id="Staff" class="btn btn-outline-primary btn-sm">Register Staff</a>
                        <a asp-action="Register" asp-route-id="Doctor" class="btn btn-outline-primary btn-sm">Register Doctor</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>