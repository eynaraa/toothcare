@model Toothcare_Appointment_System.Models.Patients

<h2 class="text-primary text-center"><i class="fas fa-user"></i> Patient Details</h2>

<div class="patient-container p-4">
    <dl class="row">
        <dt class="col-sm-3"><i class="fas fa-user"></i> Name</dt>
        <dd class="col-sm-9">@Model.PatientName</dd>

        <dt class="col-sm-3"><i class="fas fa-phone"></i> Phone Number</dt>
        <dd class="col-sm-9">@Model.PatientPhoneNo</dd>

        <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email</dt>
        <dd class="col-sm-9">@Model.PatientEmail</dd>

        <dt class="col-sm-3"><i class="fas fa-calendar-alt"></i> Date of Birth</dt>
        <dd class="col-sm-9">@Model.PatientDOB.ToShortDateString()</dd>

        <dt class="col-sm-3"><i class="fas fa-map-marker-alt"></i> Address</dt>
        <dd class="col-sm-9">@Model.PatientAddress</dd>

        <dt class="col-sm-3"><i class="fas fa-venus-mars"></i> Gender</dt>
        <dd class="col-sm-9">@Model.PatientGender</dd>
    </dl>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>
</div>

<style>
    .patient-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(0, 100, 255, 0.15);
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #a6c9e2; /* Light blue border */
    }

    dt {
        font-weight: bold;
        color: #007bff;
    }

    dd {
        padding-left: 10px;
    }

    .btn-outline-primary {
        border-radius: 20px;
        padding: 10px 20px;
        transition: all 0.3s;
    }

        .btn-outline-primary:hover {
            background: #007bff;
            color: white;
        }

    body {
        background: url('/images/dental1-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>