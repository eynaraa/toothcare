@model Toothcare_Appointment_System.Models.Patients

<h2 class="text-danger text-center"><i class="fas fa-exclamation-triangle"></i> Delete Patient</h2>

<div class="delete-container p-4">
    <div class="alert alert-warning text-center" role="alert">
        <strong><i class="fas fa-exclamation-circle"></i> Warning!</strong> Are you sure you want to delete this patient? This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3"><i class="fas fa-user"></i> Patient Name</dt>
        <dd class="col-sm-9">@Model.PatientName</dd>

        <dt class="col-sm-3"><i class="fas fa-phone"></i> Phone Number</dt>
        <dd class="col-sm-9">@Model.PatientPhoneNo</dd>

        <dt class="col-sm-3"><i class="fas fa-envelope"></i> Email</dt>
        <dd class="col-sm-9">@Model.PatientEmail</dd>

        <dt class="col-sm-3"><i class="fas fa-calendar-alt"></i> Date of Birth</dt>
        <dd class="col-sm-9">@Model.PatientDOB</dd>

        <dt class="col-sm-3"><i class="fas fa-map-marker-alt"></i> Address</dt>
        <dd class="col-sm-9">@Model.PatientAddress</dd>

        <dt class="col-sm-3"><i class="fas fa-venus-mars"></i> Gender</dt>
        <dd class="col-sm-9">@Model.PatientGender</dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="ICNumber" />
        <button type="submit" class="btn btn-danger rounded-pill px-4">
            <i class="fas fa-trash-alt"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>

<style>
    .delete-container {
        background: white;
        border-radius: 20px;
        box-shadow: 4px 4px 12px rgba(255, 0, 0, 0.15);
        max-width: 500px;
        margin: auto;
    }

    .alert-warning {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .btn-danger {
        background: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background: #c82333;
        }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
    }

    body {
        background: url('/images/dental1-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }
</style>

<!-- Include FontAwesome for Icons -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>